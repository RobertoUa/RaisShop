<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Full name</th>
    <th>Line 1</th>
    <th>Line 2</th>
    <th>City</th>
    <th>Country</th>
    <th>Postcode</th>
    <th>Phone number</th>
    <th>Belongs to</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.full_name %></td>
    <td><%= address.line_1 %></td>
    <td><%= address.line_2 %></td>
    <td><%= address.city %></td>
    <td><%= address.country %></td>
    <td><%= address.postcode %></td>
    <td><%= address.phone_number %></td>
    <td><%= address.belongs_to %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

