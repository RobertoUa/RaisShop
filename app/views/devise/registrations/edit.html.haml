%h2
  Edit #{resource_name.to_s.humanize}
= simple_form_for(resource, as: resource_name,
  url: registration_path(resource_name), html: {class: 'form-horizontal', method: :put}) do |f|
  = devise_error_messages!
  = f.input :email
  = f.input :password, hint: "(leave blank if you don't want to change it)"
  = f.input :password_confirmation
  = f.input :current_password,
    hint: "(we need your current password to confirm your changes)"
  = f.input :current_address_id, priority: @user.current_address_id,
    collection: @user.addresses, include_blank: false
  %a.edit_address Edit address
  = f.simple_fields_for :addresses do |builder|
    = render 'address_fields', f: builder
  %a#add_address Add address
  = f.button :submit

%h3 Cancel my account
%p
  Unhappy?
  = link_to "Cancel my account", registration_path(resource_name),
    data: { confirm: "Are you sure?" }, method: :delete
= link_to "Back", :back
