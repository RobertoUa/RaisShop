= simple_form_for(@order) do |f|
  = f.error_notification
  .form-inputs
    = f.input :pay_type, collection: Order::PAYMENT_TYPES,
      include_blank: false
    = f.input :shipping_type, collection: Order::SHIPPING_TYPES,
      include_blank: false
  .form-actions
    = f.button :submit, "Confirm order"
