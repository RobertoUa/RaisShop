%h1 Listing orders
%table
  %tr
    %th Address
    %th Pay type
    %th
    %th
    %th
  - @orders.each do |order|
    %tr
      %td= order.address
      %td= order.address.full_name
      %td= order.address.line_1
      %td= order.pay_type
      %td= link_to 'Show', order
      %td= link_to 'Edit', edit_order_path(order)
      %td= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }
%br/
