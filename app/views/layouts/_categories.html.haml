%section.span3
  %nav#local-navigation
    %ul.nav.nav-list.nav-stacked
      %li= link_to "All", products_path
      - Category.all.each do |category|
        %li= link_to_unless_current category.name, category,
          class: ("active" if @category == category)
  %table#recent_history.table.table-condensed.table-bordered.table-hover
    %tbody
      %tr
        %th Recently viewed items
      - @recent_history.each do |item, time|
        %tr
          %td= link_to item.title, item
-#= binding.pry
